{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "anthropic/claude-opus-4-6",
  "share": "disabled",
  "autoupdate": true,
  "plugin": ["opencode-gemini-auth@latest", "opencode-anthropic-auth@latest"],
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
  },
  "instructions": [
    "rules/agent-guidelines.md",
    "rules/code-standards.md",
    "rules/error-handling.md",
    "rules/frontend-standards.md",
    "rules/testing-standards.md"
  ],
  "agent": {
    "build": {
      "description": "Full development work with all tools enabled",
      "mode": "primary",
      "model": "anthropic/claude-opus-4-6",
      "tools": {
        "*": false,
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true,
        "mcp-gateway_*": false
      }
    },
    "plan": {
      "description": "Analysis and planning without making changes",
      "mode": "primary",
      "model": "anthropic/claude-opus-4-6",
      "tools": {
        "*": false,
        "write": false,
        "edit": false,
        "bash": true,
        "patch": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true,
        "reference_*": true,
        "mcp-gateway_*": false,
        "mcp-gateway_jira_*": true,
        "mcp-gateway_sentry_*": true,
        "mcp-gateway_firecrawl_*": true,
        "mcp-gateway_obsidian_*": true
      },
      "permission": {
        "external_directory": {
          "~/www/**": "allow",
          "~/obsidian/**": "allow",
          "/tmp/**": "allow",
          "~/.local/share/opencode/tool-output/**": "allow"
        }
      }
    },
    "browser-automation": {
      "description": "Browser automation and web testing with agent-browser",
      "mode": "subagent",
      "model": "anthropic/claude-haiku-4-5-20251001",
      "tools": {
        "*": false,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "mcp-gateway_*": false
      }
    }
  },
  "mcp": {
    "mcp-gateway": {
      "type": "remote",
      "url": "http://localhost:8888",
      "enabled": true,
      "oauth": false,
      "timeout": 10000
    },
    "pencil": {
      "type": "local",
      "command": ["npx", "-y", "pencil-mcp"],
      "enabled": true
    }
  },
  "provider": {
    "google": {
      "options": {
        "projectId": "98761157302"
      }
    }
  }
}
