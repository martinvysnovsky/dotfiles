{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "anthropic/claude-sonnet-4-20250514",
  "share": "disabled",
  "autoupdate": true,
  "instructions": [
    "rules/agent-guidelines.md",
    "rules/code-standards.md",
    "rules/error-handling.md",
    "rules/frontend-standards.md",
    "rules/testing-standards.md"
  ],
  "agent": {
    "build": {
      "description": "Full development work with all tools enabled",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    },
    "plan": {
      "description": "Analysis and planning without making changes",
      "mode": "primary",
      "model": "anthropic/claude-haiku-4-20250514",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    }
  },
  "mcp": {
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": true
    },
    "canva": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.canva.com/mcp"
      ],
      "enabled": false
    },
    "mui": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@mui/mcp@latest"
      ],
      "enabled": true
    },
    "terraform": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "hashicorp/terraform-mcp-server"
      ],
      "enabled": true
    },
    "sentry": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.sentry.dev/mcp"
      ],
      "enabled": true
    }
  }
}
