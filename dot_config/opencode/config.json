{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "anthropic/claude-sonnet-4-5-20250929",
  "share": "disabled",
  "autoupdate": true,
  "plugin": ["opencode-gemini-auth@latest"],
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
  },
  "instructions": [
    "rules/agent-guidelines.md",
    "rules/code-standards.md",
    "rules/error-handling.md",
    "rules/frontend-standards.md",
    "rules/testing-standards.md"
  ],
  "agent": {
    "build": {
      "description": "Full development work with all tools enabled",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5-20250929",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    },
    "plan": {
      "description": "Analysis and planning without making changes",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5-20250929",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "patch": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    },
    "git-master": {
      "description": "Fast git operations with conventional commits",
      "mode": "subagent",
      "model": "anthropic/claude-haiku-4-5-20251001",
      "tools": {
        "read": true,
        "write": true,
        "bash": true,
        "grep": true,
        "glob": true
      }
    }
  },
  "mcp": {
    "mcp-gateway": {
      "type": "remote",
      "url": "http://localhost:8888",
      "enabled": true,
      "oauth": false,
      "timeout": 10000
    },
    "mui": {
      "type": "local",
      "command": ["npx", "-y", "@mui/mcp@latest"],
      "enabled": true
    },
    "sentry": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.sentry.dev/mcp"
      ],
      "enabled": true
    },
    "obsidian": {
      "type": "local",
      "command": [
        "npx",
        "@mauricio.wolff/mcp-obsidian@latest",
        "/home/martinvysnovsky/obsidian"
      ],
      "enabled": true
    }
  },
  "provider": {
    "google": {
      "options": {
        "projectId": "98761157302"
      }
    }
  }
}
