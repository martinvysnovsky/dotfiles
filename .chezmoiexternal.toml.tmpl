[".tmux/plugins/tpm"]
    type = "git-repo"
    url = "https://github.com/tmux-plugins/tpm"
    [".tmux/plugins/tpm".clone]
      args = ["--depth=1"]

[".nvm"]
    type = "git-repo"
    url = "https://github.com/nvm-sh/nvm.git"
    [".nvm".pull]
      args = ["origin", "master"]

[".config/nvim"]
    type = "archive"
    stripComponents = 1
    url = "https://github.com/LazyVim/starter/archive/refs/heads/main.zip"
    refreshPeriod = "168h"
    exclude = ["*/lua/**"]

{{ if eq .chezmoi.osRelease.id "fedora" }}
[".local/share/fonts/JetBrainsMono"]
    type = "archive"
    url = "https://github.com/ryanoasis/nerd-fonts/releases/latest/download/JetBrainsMono.tar.xz"
    exact = true
    refreshPeriod = "168h"
{{ end }}

[".oh-my-zsh"]
    type = "archive"
    url = "https://github.com/ohmyzsh/ohmyzsh/archive/master.tar.gz"
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/plugins/zsh-syntax-highlighting"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-syntax-highlighting/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/plugins/zsh-autosuggestions"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-autosuggestions/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/themes/powerlevel10k"]
    type = "git-repo"
    url = "https://github.com/romkatv/powerlevel10k.git"
    refreshPeriod = "168h"
    [".oh-my-zsh/custom/themes/powerlevel10k".clone]
      args = ["--depth=1"]

[".password-store"]
    type = "git-repo"
    url = "git@github.com:martinvysnovsky/pass-store.git"

{{ if eq .chezmoi.osRelease.id "arch" }}
["yay"]
    type = "git-repo"
    url = "https://aur.archlinux.org/yay.git"
{{ end }}
